<!doctype html>
<html lang="en">
  <head>
        
        <!-- include header.ejs -->
        <%- include('../partials/head')-%>
    <link rel="stylesheet" href="css/settings.css">
</head>
  <body>
    <div class="second1">
      <div class="first">
           <!-- include nav.ejs -->
          <%- include('../partials/nav')-%>
      </div>
  </div>
    <div class="second">
        <div class="first">
            <!-- include nav.ejs -->
            <%- include('../partials/nav_three')-%>
        </div>
    </div>
    <section class="register-container">
		<h4> Your APIs </h4>
		<div class="row">
			<div class="col-sm info-box">
				<span>
          <img src="assets/auth.png">
          <h5>Authentication API</h5>
          <p>Configure API Keys, Secerts and<br>
           other details</p>
           <label class="switch">
  <input type="checkbox">
  <span class="slider round"></span>
</label>
        </span>
      </div>
      <div class="col-sm info-box" >
         <span>
          <img src="assets/email.png">
          <h5>Email API</h5>
          <p>Configure API Keys, Secerts and<br>
           other details</p>
           <label class="switch">
  <input type="checkbox">
  <span class="slider round"></span>
</label>
        </span>
      </div>
      <div class="col-sm info-box" >
         <span>
          <img src="assets/excel.png">
          <h5>Excel API</h5>
          <p>Configure API Keys, Secerts and<br>
           other details</p>
           <label class="switch">
  <input type="checkbox">
  <span class="slider round"></span>
</label>
        </span>
      </div>
      <div class="col-sm info-box" >
         <span>
          <img src="assets/sms.png">
          <h5>Sms API</h5>
          <p>Configure API Keys, Secerts and<br>
           other details</p>
           <label class="switch">
  <input type="checkbox">
  <span class="slider round"></span>
</label>
        </span>
      </div>
    </div>
  <div class="row add-services">
  <h5>Register a new service</h5>
  <button type="button" class="btn-service">+ Add service</button>
  </div>
  <div class="row">
    <div class="col-sm">
    <h5>API key:</h5>
    </div>
     <div class="col-sm input-group mb-3">

    <input type="text" class="form-control" placeholder="">
    <div class="input-group-append">
      <button class="btn-reset" type="submit">Reset</button>
     </div>
  </div>
  </div>
  <h3>General Settings</h3>
  <div class="row settings">
    <div class="col-sm" >
      <h4>Account Settings</h4>
      <p>Change your account settings</p>
    </div>
   <div class="col-sm" >
     <h4>Payment Settings</h4>
      <p>Choose payment and billing settings</p>
   </div>
    <div class="col-sm" >
       <h4>Help</h4>
      <p>Frequently asked questions</p>
    </div>

  </div>
  <div class="row">
      <div class="col-sm" >
         <h4>Change Password</h4>
      <p>Change your password</p>
      </div>
      <div class="col-sm" >
         <h4>Security Settings</h4>
      <p>Settings and recommendations for a safer profile</p>
      </div>
      <div class="col-sm">
      </div>
  </div>
  <div class="row change-buttons">
  <button type="button" class="btn-service">Cancel</button>
  <button type="button" class="btn-service">Save changes</button>
  </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
